{
  "name": "orm-ijx",
  "version": "2.0.0",
  "description": "Object-Relational mapping",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build:dev": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json -w",
    "tsnode:dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/index.ts'",
    "test:dev": "nodemon --watch ./dist/esm --watch ./test --ignore '*.map' --exec npm test",
    "test": "node ./test/index.js"
  },
  "repository": {
    "type": "git",  
    "url": "git+https://github.com/JuanIJX/ORM.git"
  },
  "keywords": [
    "ORM",
    "database",
    "mysql"
  ],
  "author": "JuanIJX",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JuanIJX/ORM/issues"
  },
  "homepage": "https://github.com/JuanIJX/ORM#readme",
  "devDependencies": {
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "mysql2": "^3.3.5"
  }
}
